 						vsync-len       = <4>;
 						clock-frequency = <56000000>;
+						hsync-active	= <0>;
+						vsync-active	= <0>;
 					};
 					/* 1280 x 720 @ 60 Hz  Reduced blanking VESA CVT 0.92M9-R */
 					timing1: 1280x720-60 {
@@ -128,6 +129,8 @@
 						vsync-len       = <5>;
 						vback-porch     = <13>;
 						clock-frequency = <64000000>;
+						hsync-active	= <0>;
+						vsync-active	= <0>;
 					};
 
 				};
@@ -139,7 +142,6 @@
 				interrupt-parent = <&intc>;
 				interrupts = <36>;
 				ti,hwmods = "lcdc";
-				ti,power-gpio = <&gpio1 7 0x0>;
 			};
 
 		};
