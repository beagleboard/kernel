+						hfront-porch    = <8>;
+						hsync-len       = <4>;
+						vback-porch     = <12>;
+						vfront-porch    = <4>;
+						vsync-len       = <10>;
+						clock-frequency = <9000000>;
+						hsync-active    = <0>;
+						vsync-active    = <0>;
