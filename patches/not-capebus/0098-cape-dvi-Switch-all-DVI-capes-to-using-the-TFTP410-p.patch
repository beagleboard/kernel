-						hactive         = <1280>;
-						hfront-porch    = <48>;
-						hsync-len       = <32>;
-						hback-porch     = <80>;
-						vactive         = <720>;
-						vfront-porch    = <3>;
-						vsync-len       = <5>;
-						vback-porch     = <13>;
-						clock-frequency = <64000000>;
-						hsync-active	= <0>;
-						vsync-active	= <0>;
-					};
-
-				};
+				i2c = <&i2c2>;
 			};
 
