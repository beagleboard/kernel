-			/* Settings for DVI 1024x768@60 */
+			/* use the DVI panel now */
 			panel {
-				compatible = "tilcdc,panel";
+				compatible = "tilcdc,tfp410";
 				pinctrl-names = "default";
 				pinctrl-0 = <&bone_dvi_cape_dvi_00A0_pins>;
 				ti,power-gpio = <&gpio1 7 0x0>;
-				panel-info {
-					ac-bias           = <255>;
-					ac-bias-intrpt    = <0>;
-					dma-burst-sz      = <16>;
-					bpp               = <16>;
-					fdd               = <0x80>;
