-					raster-order      = <0>;
-					fifo-th           = <0>;
-				};
-				display-timings {
-					native-mode = <&timing1>;
-					timing0: 1024x768 {
-						hactive         = <1024>;
-						vactive         = <768>;
-						hback-porch     = <80>;
-						hfront-porch    = <48>;
-						vback-porch     = <15>;
-						vfront-porch    = <3>;
-						hsync-len       = <32>;
-						vsync-len       = <4>;
-						clock-frequency = <56000000>;
-						hsync-active	= <0>;
-						vsync-active	= <0>;
-					};
-					/* 1280 x 720 @ 60 Hz  Reduced blanking VESA CVT 0.92M9-R */
