+	/* state the resources this cape uses */
+	exclusive-use =
+		/* the pin header P8 uses */
+		"P8.16", /* (3) DIR_EXT_2 	*/
+		"P8.15", /* (4) DIR_EXT_1 	*/
+		"P8.14", /* (5) DIR_Z 		*/
+		"P8.17", /* (6) STEP_X 		*/
+		"P8.7",  /* END_STOP_Y1 */
+		"P8.8",  /* FAULT_EXT_2	*/
+		"P8.9",  /* FAULT_Y 	*/
+		"P8.10", /* FAULT_x 	*/
+		"P8.18", /* FAULT_EXT_1	*/
+		"P8.11", /* (22) STEP_EXT_2	*/
+		"P8.12", /* (23) STEP_Y		*/
+		"P8.13", /* (24) STEP_Z		*/
+		"P8.19", /* (25) DIR_Y		*/
+		"P8.26", /* DIR_X		*/
+		/* the pin header P9 uses */
+		"P9.11", /* END_STOP_Z1	*/
+		"P9.12", /* STEP_EXT_1	*/
+		"P9.13", /* END_STOP_X2	*/
+		"P9.18", /* END_STOP_Z2	*/
+		"P9.24", /* FAULT_Z		*/
+		"P9.25", /* END_STOP_Y2	*/
+		"P9.26", /* END_STOP_X1	*/
+		"P9.28", /* SPI1_CS0 	*/
+		"P9.29", /* SPI1_MISO   */
+		"P9.30", /* SPI1_MOSI	*/
+		"P9.31", /* SPI1_SCLK	*/
+		"P9.33", /* AIN4		*/
+		"P9.35", /* AIN6		*/
+		"P9.36", /* AIN5		*/
+		"P9.42", /* SPI1_CS1	*/
